{
    "threads": 8,
    "experiments": {
        "without-transmittance": {
            "N": 50,
            "type": "simulation",
            "comment": "to test non-linear integration; uses expit for readout and a dye-ish memory layer that outputs its concentration levels",
            "T_outbound":1500,
            "T_inbound": 1500,
            "min_homing_distance": 0,
            "motor_factor": 0.5,
            "record": ["memory"],
            "cx": {
                "type": "dye",
                "output_layer": "motor",
                "params": {
                    "noise": 0.1,
                    "mem_initial": 0.0,
                    "integration_only": true,
                    "model_transmittance": false,
                    "phi": { "logspace": [-5, 0, 50] },
                    "beta": 0.0,
                    "k": 0.0,
                    "start_at_stable": true
                }
            }
        },
        "with-transmittance": {
            "N": 50,
            "type": "simulation",
            "comment": "with (1-T) factor instead of (1-c)",
            "T_outbound":1500,
            "T_inbound": 1500,
            "min_homing_distance": 0,
            "motor_factor": 0.5,
            "record": ["memory"],
            "cx": {
                "type": "dye",
                "output_layer": "motor",
                "params": {
                    "noise": 0.1,
                    "mem_initial": 0.0,
                    "integration_only": true,
                    "model_transmittance": true,
                    "phi": { "logspace": [-5, 0, 50] },
                    "beta": 0.0,
                    "k": 0.0,
                    "start_at_stable": true
                }
            }
        }
    }
}
